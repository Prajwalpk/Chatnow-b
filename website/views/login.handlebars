<div class="container" style=" margin-top: 10rem;">
   
   {{#if message}}
   <div class="row">
      <div class="col-6 offset-3">
         <div class="alert alert-danger">
      {{message}}
   </div>
      </div>
   </div>
   {{/if}}

   <div class="row justify-content-center">
      <div class="bg-white col-lg-5 jumbotron shadow-lg" style=" padding: 2rem">
         <form id="login" name="login" method="POST" action="/login">
            <h1 class="font-weight-bold h6 text-uppercase text-center">Login</h1>

            <div class="form-group">
               <label class="label" for="email">E-mail</label>

                  <input  class="form-control"  type="email" id="email" name="email" required>
 <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
               <label class="label" for="password">Password</label>

                  <input  class="form-control"  type="password" id="password" name="password" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[$@$!%*?&])[A-Za-z\d$@$!%*?&]{8,}"  required>
               </div>
  
            <button class="btn  btn-primary btn-block btn-lg" >
            Sign In
            </button>
         </form>
      </div>
   </div>
</div>